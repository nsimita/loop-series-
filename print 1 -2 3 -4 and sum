#include <stdio.h>

int main() {
     int i,j,n, sum=0, sign=1;
     scanf("%d",&n);
     for(i=1; i<=n; i++){
         
       if(i%2==0){
           i=i*-1;
           sum+=j;
           printf("%d ",i);
           i=i*-1;
       }
       else{
          
           sum+=i;
            printf("%d ",i);
       }
     }
     printf("\n %d",sum);
    return 0;
}
